{
  "name": "@novac/client",
  "version": "0.2.0",
  "private": false,
  "author": "Higor Alves <higorhaalves@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest -o --silent",
    "test:watch": "jest -o --watch --silent",
    "test:coverage": "jest -u --ci --silent --coverage",
    "test:ci": "jest -u --ci --silent --verbose --passWithNoTests",
    "serve:coverage": "open http://localhost:5000/ && serve coverage/lcov-report",
    "prettier": "npx prettier --write src/**/*.{ts,tsx,json}",
    "lint": "tsc --noEmit && eslint --fix --ext ts,tsx .",
    "release": "standard-version",
    "release:major": "yarn run release --release-as major --no-verify",
    "release:minor": "yarn run release --release-as minor --no-verify",
    "release:patch": "yarn run release --release-as patch --no-verify",
    "release:alpha": "yarn run release --prerelease alpha --no-verify",
    "release:beta": "yarn run release --prerelease beta --no-verify"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env CI=true yarn test --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.4.0",
    "@heroicons/react": "^1.0.3",
    "@sentry/nextjs": "^6.11.0",
    "axios": "^0.21.1",
    "formik": "^2.2.9",
    "js-cookie": "^3.0.0",
    "next": "11.0.1",
    "next-cookies": "^2.0.3",
    "next-redux-wrapper": "^7.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-lottie": "^1.2.3",
    "react-redux": "^7.2.4",
    "react-toastify": "^7.0.4",
    "redux": "^4.1.1",
    "styled-components": "^5.3.0",
    "styled-components-modifiers": "^1.2.5",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/js-cookie": "^2.2.7",
    "@types/react": "17.0.16",
    "@types/react-lottie": "^1.2.6",
    "@types/redux-devtools-extension": "^2.13.2",
    "@types/redux-saga": "^0.10.5",
    "@types/styled-components": "^5.1.12",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "autoprefixer": "^10.3.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^1.13.2",
    "commitlint": "^13.1.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "react-is": "^17.0.2",
    "standard-version": "^9.3.1",
    "tailwindcss": "^2.2.7",
    "twin.macro": "^2.6.2",
    "typescript": "4.3.5"
  }
}
