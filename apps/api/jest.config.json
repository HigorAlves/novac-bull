{
	"bail": 1,
	"silent": true,
	"testTimeout": 5000,
	"timers": "fake",
	"testRegex": ".*\\.spec\\.ts$",
	"preset": "@shelf/jest-mongodb",
	"testEnvironment": "node",
	"moduleFileExtensions": [
		"js",
		"json",
		"ts"
	],
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"collectCoverageFrom": [
		"**/*.(t|j)s"
	],
	"moduleNameMapper": {
		"~/(.*)": [
			"<rootDir>/src/$1"
		]
	}
}
