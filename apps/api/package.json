{
	"name": "@novac/api",
	"version": "0.5.0",
	"description": "",
	"author": "Higor Alves <higorhaalves@gmail.com>",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"prettier": "npx prettier --write src/**/*.{ts,tsx,json}",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest -o --silent",
		"test:ci": "jest --ci --silent --passWithNoTests --detectOpenHandles",
		"test:watch": "jest --runInBand --watch",
		"test:cov": "jest --runInBand --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"release": "standard-version",
		"release:major": "yarn run release --release-as major --no-verify",
		"release:minor": "yarn run release --release-as minor --no-verify",
		"release:patch": "yarn run release --release-as patch --no-verify",
		"release:alpha": "yarn run release --prerelease alpha --no-verify",
		"release:beta": "yarn run release --prerelease beta --no-verify"
	},
	"config": {
		"mongodbMemoryServer": {
			"arch": "x64",
			"version": "4.4.2",
			"debug": "0",
			"disablePostinstall": "1",
			"md5Check": "1"
		}
	},
	"dependencies": {
		"@nestjs/common": "^8.0.6",
		"@nestjs/config": "^1.0.1",
		"@nestjs/core": "^8.0.6",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/mongoose": "^8.0.0",
		"@nestjs/passport": "^8.0.1",
		"@nestjs/platform-express": "^8.0.6",
		"@nestjs/swagger": "^5.0.9",
		"@sendgrid/mail": "^7.4.5",
		"@sentry/node": "^6.10.0",
		"@sentry/tracing": "^6.10.0",
		"@types/mongodb": "^4.0.6",
		"bcrypt": "^5.0.1",
		"class-validator": "^0.13.1",
		"coinbase-commerce-node": "^1.0.4",
		"csurf": "^1.11.0",
		"express-rate-limit": "^5.3.0",
		"hbs": "^4.1.2",
		"helmet": "^4.6.0",
		"logdna-winston": "^3.0.5",
		"mongodb": "^4.1.0",
		"mongoose": "^5.13.5",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.3.0",
		"stripe": "^8.168.0",
		"swagger-ui-express": "^4.1.6",
		"uuid": "^8.3.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.1.1",
		"@nestjs/schematics": "^8.0.2",
		"@nestjs/testing": "^8.0.6",
		"@shelf/jest-mongodb": "^2.0.1",
		"@types/bcrypt": "^5.0.0",
		"@types/coinbase-commerce-node": "^1.0.6",
		"@types/express": "^4.17.13",
		"@types/jest": "^26.0.24",
		"@types/mongoose": "^5.11.96",
		"@types/node": "^16.4.12",
		"@types/passport-jwt": "^3.0.6",
		"@types/stripe": "^8.0.417",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.29.0",
		"@typescript-eslint/parser": "^4.29.0",
		"jest": "^27.0.6",
		"mongodb-memory-server": "^7.3.4",
		"supertest": "^6.1.4",
		"ts-jest": "^27.0.4",
		"ts-loader": "^9.2.5",
		"ts-node": "^10.1.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5"
	}
}
