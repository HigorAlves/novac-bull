{
	"name": "@novac/ssr",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"start": "next start",
		"build": "next build",
		"test": "jest -o --silent",
		"test:watch": "jest -o --watch --silent",
		"test:coverage": "jest -u --ci --silent --coverage",
		"test:ci": "jest -u --ci --silent --verbose --passWithNoTests",
		"serve:coverage": "open http://localhost:5000/ && serve coverage/lcov-report",
		"prettier": "npx prettier --write src/**/*.{ts,tsx,json}",
		"lint": "tsc --noEmit && eslint --fix --ext ts,tsx .",
		"release": "standard-version",
		"release:major": "yarn run release --release-as major --no-verify",
		"release:minor": "yarn run release --release-as minor --no-verify",
		"release:patch": "yarn run release --release-as patch --no-verify",
		"release:alpha": "yarn run release --prerelease alpha --no-verify",
		"release:beta": "yarn run release --prerelease beta --no-verify",
		"storybook": "start-storybook -s ./public -p 6006",
		"build-storybook": "build-storybook -s ./public",
		"lighthouse": "lighthouse http://localhost:3000 --chrome-flags='--no-sandbox --headless --disable-gpu' --output html --output-path ./lighthouse-report.html --view"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"globby": "^11.0.3",
		"js-cookie": "^2.2.1",
		"next": "10.2.3",
		"next-cookies": "^2.0.3",
		"next-redux-wrapper": "^6.0.2",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-lottie": "^1.2.3",
		"react-redux": "^7.2.4",
		"react-styled-flexboxgrid": "^3.2.1",
		"redux": "^4.1.0",
		"redux-saga": "^1.1.3",
		"reinspect": "^1.1.0",
		"swr": "^0.5.6"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.3",
		"@babel/core": "^7.14.3",
		"@babel/preset-env": "^7.14.2",
		"@babel/preset-typescript": "^7.13.0",
		"@storybook/addon-essentials": "^6.2.9",
		"@storybook/react": "^6.2.9",
		"@testing-library/jest-dom": "^5.12.0",
		"@testing-library/react": "^11.2.7",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.6.1",
		"@types/react": "^17.0.8",
		"autoprefixer": "^10.2.6",
		"babel-plugin-inline-react-svg": "^2.0.1",
		"jest": "^27.0.1",
		"lighthouse": "^7.5.0",
		"next-compose-plugins": "^2.2.1",
		"postcss": "^8.3.0",
		"redux-devtools-extension": "^2.13.9",
		"serve": "^11.3.2",
		"tailwindcss": "^2.1.2",
		"typescript": "^4.3.2"
	}
}
